<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1><%= recipe.title %></h1>
       <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit Recipe</a>
